<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-info">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <% if(user){ %>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <% } else{ %>
        <a class="nav-item nav-link" href="/login">Create New URL</a>
        <% } %>
      </div>
    </div>
    <div class="form-inline">

      <% if(user){ %>
      <form method="POST" action="/logout">
        <span class="mr-3 text-light"> Logged in as: <%= user.email %></span>
        <button type="submit" class="bg-light text-info border border-info rounded">
          Logout
        </button>
      </form>
      <% } else{ %>
      <a href="/register" class="text-light m-2">Register</a>
      <a href="/login" class="text-light m-2">Login</a>
      <% } %>
    </div>
  </nav>
</header>